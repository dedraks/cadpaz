        <div id="tab2" class="tab">
            <div style="width: 96%; background: #eee; visibility: visible" class="example">
                <strong>Telefones</strong><br />
                {% set fone = null %}
                {% for telefone in pessoa.telefones %}
                    <div class="example" style="visibility: visible; width: 96%; padding-bottom: 15px;  background: #ddf;">
                        Numero: {{ telefone.numero }}<br />
                        Tipo: {{ telefone.tipo }}<br />
                        Obs: {{ telefone.obs }}
                    </div>
                    <div class="spacer"></div>
                    {% set fone = 1 %}
                {% endfor %}
                {% if fone is null %}Nenhum telefone cadastrado.<br />{% endif %}
                <strong>Endereços</strong><br />
                {% set end = null %}
                {% for endereco in pessoa.enderecos %}
                    <div class="example" style="visibility: visible; width: 96%; word-wrap: break-word;  background: #ddf;">
                        {{ endereco.nome }}<br />
                        {{ endereco.logradouro }}, {{ endereco.numero }}<br />
                        {{ endereco.bairro }}<br />
                        {{ endereco.cep }}<br />
                        {{ endereco.municipio }} - {{ endereco.uf }}<br />
                        {{ endereco.obs }}
                        {% set end = 1 %}
                    </div>
                     <div class="spacer"></div>
                {% endfor %}
                {% if end is null %}Nenhum endereço cadastrado.<br>{% endif %}
            </div>
        </div>
 
