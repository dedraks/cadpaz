        }
    });
    $('#relRenda').change(function() {
        if (this.checked) {
            $('#relRendaOpcoes').show();
        }
        else {
            $('#relRendaOpcoes').hide();
        }
    });
    $('#relIdades').change(function() {
        if (this.checked) {
            $('#relIdadesOpcoes').show();
        }
        else {
            $('#relIdadesOpcoes').hide();
        }
    });
    $('#relCor').change(function() {
        if (this.checked) {
            $('#relCorOpcoes').show();
