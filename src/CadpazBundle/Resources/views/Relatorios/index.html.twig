<script>
    $('html, body').animate({
            scrollTop: $("#relatoriosInicio").offset().top
        }, 2000);
    
    $('.scrollToTop').on('click', function(e) {
        e.preventDefault();
        
        $('html, body').animate({
            scrollTop: $("#relatoriosInicio").offset().top
        }, 2000);
    });
    
    function printContent(el){
        var restorepage = $('body').html();
        var printcontent = $(el).clone();
        $('body').empty().html(printcontent);
        window.print();
        $('body').html(restorepage);
        }
    
    $('.printRel').on('click', function(e) {
        e.preventDefault();
        printContent('#relatoriosArea');
        //alert($('#relatoriosArea').html());
    });
    
    $('#tbl_cas, #tbl_enc, #tbl_ori, #tbl_sex').DataTable({
        "paging":   false,
        "ordering": false,
        "info":     false,
        "searching": false
    });
    
    $('a[title]').qtip({position: {
        my: 'top right',  // Position my top left...
        at: 'top left', // at the bottom right of...);
        target: $('#outro')
    }});




    $('#relCasos').change(function() {
        if (this.checked) {
            $('#relCasosOpcoes').show();
        }
        else {
            $('#relCasosOpcoes').hide();
        }
    });
